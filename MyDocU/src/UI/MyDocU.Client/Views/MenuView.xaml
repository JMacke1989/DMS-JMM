<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDocU.Client.Views.MenuView"
			 xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
			 WidthRequest="100">
    <VerticalStackLayout Margin="0,20,0,20">
		<VerticalStackLayout HeightRequest="80">
			<mdc:IconButton Icon="Home" Command="{Binding NavigateToDocumentsCommand}" Style="{DynamicResource StandardIconButtonStyle}" />
			<Label HorizontalTextAlignment="Center" Text="Home" HorizontalOptions="Center"/>
		</VerticalStackLayout>

		<VerticalStackLayout HeightRequest="80">
			<mdc:IconButton Icon="FileDocument" Command="{Binding NavigateToAddDocumentCommand}" Style="{DynamicResource StandardIconButtonStyle}" />
			<Label HorizontalTextAlignment="Center" Text="Document" HorizontalOptions="Center"/>
		</VerticalStackLayout>

		<VerticalStackLayout HeightRequest="80">
			<mdc:IconButton Icon="ViewDashboard" Style="{DynamicResource StandardIconButtonStyle}" />
			<Label HorizontalTextAlignment="Center" Text="App" HorizontalOptions="Center"/>
		</VerticalStackLayout>
			
	
    </VerticalStackLayout>
</ContentView>
