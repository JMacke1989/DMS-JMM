<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
			x:Class="MyDocU.Client.Views.MainPage"
			xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			xmlns:viewModels="clr-namespace:MyDocU.Client.ViewModels;assembly=MyDocU.Client"
			x:Name="PersonPage"
			Title="Welcome to My DocU!" BackgroundColor="LightSkyBlue">

	<Frame Margin="100,40,100,40" CornerRadius="25">
	<StackLayout Padding="20">
		<StackLayout>
		<Label Text="Log In To My DocU" Padding="0,0,0,30" FontAttributes="Bold"></Label>

			<Label Text="User Name:"></Label>
		<Entry x:Name="txtUserName"></Entry>

		<Label Text="Password:"></Label>
		<Entry x:Name="txtPassword"></Entry>

			<Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked"></Button>
		</StackLayout>
	</StackLayout>
	</Frame>
</ContentPage>