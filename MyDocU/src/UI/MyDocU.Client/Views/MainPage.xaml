<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="MyDocU.Client.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MyDocU.Client.ViewModels;assembly=MyDocU.Client"
    x:Name="PersonPage">
    <Grid
        BackgroundColor="gray"
        MaximumHeightRequest="350"
        MinimumWidthRequest="300">

        <Frame
            Margin="0,10,0,10"
            MaximumHeightRequest="350"
            MaximumWidthRequest="300">
            <StackLayout Margin="0,5,0,0" Background="white">
                <Label Text="My DocU" />
                <Label Margin="0,5,0,0" Text="Log In to MyDocU" />
                <Label Margin="0,20,0,0" Text="E-Mail" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>